<div class="card">
  <div class="card-header">
    <h5> <%= @hero_name %> </h5>
  </div>
  <div class="row no-gutters">

    <div class="col-md-4">
      <img src="..." class="card-img" alt="...">
    </div>
      <div class="col-md-8">
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p class="card-text">Your super hero name: <strong><%= @hero_name %></strong></p>
            <p class="card-text"> Your super hero power: <cite> <%= @hero_power %> </cite>  </p>

            <hr class="my-4">

            <p class="card-text"> Your super corp power: <cite> <%= @corp_power %> </cite>  </p>

            <hr class="my-4">

            <p class="card-text"> Your super corp title: <cite> <%= @corp_title %> </cite>  </p>

            <hr class="my-4">

            <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
          </blockquote>
        </div>
      </div>
  </div>
  <div class="card-footer">
    <h5> <%=   %> </h5>
  </div>
</div>
